<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/get_list_fr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/this_is_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/recipe_what_you_need"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/list_of_recipes"
        android:layout_width="match_parent"
        android:layout_height="428dp"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/main_menu_button_from_recipe_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_main_menu"
        style="?android:attr/buttonBarButtonStyle"/>

</LinearLayout>